{
  "name": "@dinko_abdic/claude-code-remote",
  "version": "0.1.2",
  "description": "WebSocket daemon that relays terminal sessions for Claude Code Remote",
  "main": "src/index.js",
  "bin": {
    "claude-code-remote": "src/index.js"
  },
  "scripts": {
