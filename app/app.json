{
  "expo": {
    "name": "Claude Remote",
    "slug": "claude-remote",
    "scheme": "clauderemote",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e1e1e"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1e1e1e"
      },
      "edgeToEdgeEnabled": true,
      "softwareKeyboardLayoutMode": "adjustResize",
      "predictiveBackGestureEnabled": false,
      "package": "com.clauderemote.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      ["expo-camera", { "cameraPermission": "Allow Claude Code Remote to use the camera to scan setup QR codes" }],
      ["expo-build-properties", { "android": { "usesCleartextTraffic": true, "permissions": ["android.permission.RECORD_AUDIO", "android.permission.FOREGROUND_SERVICE", "android.permission.FOREGROUND_SERVICE_DATA_SYNC"] } }],
      "expo-notifications",
      "./plugins/withBackgroundServiceType"
    ]
  }
}
